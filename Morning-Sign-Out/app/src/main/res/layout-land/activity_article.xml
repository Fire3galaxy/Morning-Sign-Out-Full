<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container_article"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:animateLayoutChanges="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/container_webview">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webView_article"
            android:layout_gravity="center" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_article"
            android:visibility="gone"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_articleTwoBars"
        android:background="@color/mso_blue"
        android:orientation="horizontal">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adUnitId="@string/banner_ad_unit_id"
            ads:adSize="BANNER"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="1"
            android:id="@+id/container_articleBar"
            android:layout_gravity="center_horizontal"
            android:background="@color/mso_blue"
            android:visibility="visible">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button_scroll"
                android:layout_toStartOf="@+id/button_scroll"
                android:layout_centerVertical="true"
                android:id="@+id/button_comment"
                android:contentDescription="@string/action_comment"
                android:background="@drawable/button_scroll"
                android:src="@drawable/comment_icon" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/space_center"
                android:layout_toStartOf="@+id/space_center"
                android:layout_centerVertical="true"
                android:id="@+id/button_scroll"
                android:background="@drawable/button_scroll"
                android:src="@drawable/scroll_icon"
                android:contentDescription="@string/action_scroll" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/space_center"
                android:visibility="invisible"
                android:layout_centerInParent="true"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/space_center"
                android:layout_toEndOf="@+id/space_center"
                android:layout_centerVertical="true"
                android:id="@+id/button_share"
                android:src="@drawable/ic_action_share"
                android:background="@drawable/button_scroll"
                android:contentDescription="@string/action_share"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/button_share"
                android:layout_toEndOf="@+id/button_share"
                android:layout_centerVertical="true"
                android:id="@+id/button_swap_bar"
                android:src="@drawable/ic_swap_bar"
                android:contentDescription="@string/action_swap"
                android:background="@drawable/button_scroll" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
