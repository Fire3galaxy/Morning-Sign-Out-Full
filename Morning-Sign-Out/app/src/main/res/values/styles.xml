<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mso_blue</item>
        <item name="android:actionBarSize">45dp</item>
        <item name="actionBarSize">45dp</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll</item>
        <item name="android:fastScrollOverlayPosition">aboveThumb</item>
        <item name="android:fastScrollTextColor">@android:color/white</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/fastscroll_display</item>
    </style>

    <style name="DisqusTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_cancel</item>
        <item name="colorPrimary">@color/mso_blue</item>
        <item name="android:actionBarSize">45dp</item>
        <item name="actionBarSize">45dp</item>
    </style>

</resources>

