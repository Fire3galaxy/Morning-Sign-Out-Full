<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mso_blue</item>
        <item name="android:actionBarSize">45dp</item>
    </style>

    <style name="DisqusTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_cancel</item>
        <item name="colorPrimary">@color/mso_blue</item>
        <item name="android:actionBarSize">45dp</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="DisqusThemeTransparent" parent="Theme.AppCompat.Translucent">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_cancel</item>
        <item name="colorPrimary">@color/mso_blue</item>
        <item name="android:actionBarSize">45dp</item>
    </style>

    <!-- Attempted to use this to italicize/customize article actionbar title without custom textView. No italics. -->
    <style name="ArticleAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/mso_blue</item>
        <item name="android:actionBarSize">45dp</item>
        <item name="android:actionBarStyle">@style/ArticleActionBarAppTheme</item>
    </style>

    <style name="ArticleActionBarAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/ArticleTitleFont</item>
    </style>

    <style name="ArticleTitleFont" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/bright_foreground_material_dark</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>

