<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/container_article"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.morningsignout.com.morningsignoff.ArticleActivity"
    tools:ignore="MergeRootFrame"
    android:background="@android:color/white" >

    <app.morningsignout.com.morningsignoff.CustomWebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/webView_article"
        android:layout_gravity="center"
        android:layout_weight="9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/container_articleBar"
        android:layout_gravity="center_horizontal"
        android:background="@color/mso_blue">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_share"
            android:src="@android:drawable/ic_menu_share"
            android:background="@drawable/button_scroll"
            android:contentDescription="@string/action_share"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_scroll"
            android:background="@drawable/button_scroll"
            android:src="@drawable/scroll_icon"
            android:contentDescription="@string/action_scroll"
            android:layout_marginRight="99dp"
            android:layout_marginEnd="99dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>
