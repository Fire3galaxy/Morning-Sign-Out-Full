<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#e1eaee"
    tools:context="app.morningsignout.com.morningsignoff.CategoryActivity$PlaceholderFragment">


    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefresh_category">
        <in.srain.cube.views.GridViewWithHeaderAndFooter
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridView"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:numColumns="1"
            android:divider="#00ffffff"
            android:dividerHeight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:listSelector="@android:color/transparent"
            android:footerDividersEnabled="true"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/category_refresh"
        android:id="@+id/textView_categoryRefresh"
        android:paddingTop="@dimen/abc_action_bar_default_padding_material"
        android:layout_centerHorizontal="true"
        android:maxWidth="@dimen/abc_action_bar_stacked_tab_max_width"
        android:drawableTop="@drawable/ic_action_about"/>

</RelativeLayout>
