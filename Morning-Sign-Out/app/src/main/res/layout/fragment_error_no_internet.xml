<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/imageView_error_mso"
        android:src="@drawable/internet_error"
        android:contentDescription="@string/description_error_no_internet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_refresh_button"
        android:id="@+id/button_error_no_internet"
        android:background="@drawable/button_custom"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imageView_empty"
        android:layout_gravity="center_horizontal" />

</LinearLayout>